@using Library.Models
@model ViewBook
@{
    ViewData["Title"] = @Model.Name;
}

<div class="course-details mt-20">
    <div class="container-fluid">
        <div class="course-details-wrapper mb-45">
            <div class="row">
                <div class="col-lg-7">
                    <div class="course-details-about bg-body radius-xl p-4">
                        <div class="course-details-about__content detail-product-box">
                            <h1 class="main-title">@Model.Name</h1>
                            <p class="main-title-sub mb-30 text-gray">
                                @Model.ShortDescription
                            </p>
                            <h5 class="mb-3">Thông tin tác giả</h5>
                            <div class="course-details-author">
                                <img src="@Model.AuthorImageURL" alt="@Model.AuthorName">
                                <div class="course-details-author__title">
                                    <h6>@Model.AuthorName</h6>
                                    <span>@Model.AuthorAddress</span>
                                </div>
                            </div>
                            <h5>
                                Mô tả chi tiết và đánh giá
                            </h5>
                            <div class="product-description">
                                <div class="product-desc-content">
                                    <div class="panel entry-content active" id="tab-description">
                                        @Html.Raw(Model.Description)
                                    </div>
                                </div>
                                <div class="btn-readmore-box mt-3 text-center d-flex justify-content-center">
                                    <button class="readmore-togle-btn btn btn-info btn-default btn-squared border-0 me-10 my-sm-0 my-2">
                                        Xem
                                        thêm
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5 mt-lg-0 mt-30">
                    <div class="cvg">
                        <div class="cvg__item cvg-overlay">
                            <img src="@Model.ImageURL" alt="@Model.Name">
                        </div>
                        <div class="d-flex align-items-center justify-content-center flex-wrap mt-20">
                            <div class="cvg__icon-area d-flex flex-column justify-content-center align-items-center">
                                <div class="svg-icon order-bg-opacity-primary">
                                    <img class="svg" src="/img/svg/book-alt.svg" alt="booked">
                                </div>
                                <span>@Model.ReaderCount người đã đọc</span>
                            </div>
                            <div class="cvg__icon-area d-flex flex-column justify-content-center align-items-center">
                                <div class="svg-icon order-bg-opacity-warning">
                                    <img class="svg" src="/img/svg/file-text.svg" alt="sync">
                                </div>
                                <span>@Model.Pages trang</span>
                            </div>
                        </div>
                        <div class="cvg__contents">
                            <a asp-action="AddToCart" asp-controller="Orders" asp-route-bookId="@Model.BookId"
                               class="btn btn-primary rounded-pill text-transform-none">
                                Đăng ký mượn sách
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $(".btn-readmore-box").on("click", function (e) {
                const toggleBtn = e.target
                if ($(".product-desc-content").hasClass("active")) {
                    $(toggleBtn).text("Xem thêm")
                } else {
                    $(toggleBtn).text("Thu gọn")
                }
                $(".product-desc-content").toggleClass("active");
            });
        });
    </script>
}