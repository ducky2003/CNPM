@using Microsoft.AspNetCore.Identity
@using Library.Entities
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@{
    var currentPath = Context.Request.Path;
}
<header class="header-top">
    <nav class="navbar navbar-light">
        <div class="navbar-left">
            <div class="logo-area">
                <a class="navbar-brand" asp-action="Index" asp-controller="Home" asp-area="">
                    <img class="dark" src="/img/Logo-Hori.png" alt="">
                    <img class="light" src="/img/Logo-Hori-White.png" alt="">
                </a>
                <a href="#" class="sidebar-toggle">
                    <img class="svg" src="/img/svg/align-center-alt.svg" alt="img">
                </a>
            </div>
            <sp class="customizer-trigger">
                <i class="uil uil-edit-alt"></i>
                <span>Giao diện</span>
            </sp>
            <div class="top-menu">
                <div class="hexadash-top-menu position-relative">
                    <ul class="d-flex align-items-center flex-wrap">
                        <li>
                            <a asp-action="Index" asp-controller="Home" asp-area="Admin" asp-active>
                                <span class="nav-icon uil uil-create-dashboard"></span>
                                <span class="menu-text">Trang chủ</span>
                            </a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="Users" asp-area="Admin" asp-active>
                                <span class="nav-icon uil uil-users-alt"></span>
                                <span class="menu-text">Quản lý người dùng</span>
                            </a>
                        </li>
                    </ul>
                </div>

            </div>
        </div>
        <!-- ends: navbar-left -->
        <div class="navbar-right">
            <ul class="navbar-right__menu">
                <li class="nav-search">
                    <a href="#" class="search-toggle">
                        <i class="uil uil-search"></i>
                        <i class="uil uil-times"></i>
                    </a>
                    <form action="/" class="search-form-topMenu rounded-pill">
                        <span class="search-icon uil uil-search"></span>
                        <input class="form-control me-sm-2 box-shadow-none" type="text" placeholder="Tìm kiến..."
                               aria-label="Search">
                    </form>
                </li>
                <li class="nav-message">
                    <div class="dropdown-custom">
                        <a href="javascript:;" class="nav-item-toggle icon-active">
                            <img class="svg" src="/img/svg/message.svg" alt="img">
                        </a>
                        <div class="dropdown-parent-wrapper">
                            <div class="dropdown-wrapper">
                                <h2 class="dropdown-wrapper__title">Tin nhắm</h2>
                                <ul>
                                    <div class="card card-default card-md mb-4">
                                        <div class="card-body">
                                            <div class="dm-empty text-center">
                                                <div class="dm-empty__image">
                                                    <img src="/img/svg/empty.svg" alt="Empty table">
                                                </div>
                                                <div class="dm-empty__text">
                                                    <p class="">Không có tin nhắn nào!</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </ul>
                            </div>
                        </div>
                    </div>
                </li>
                <!-- ends: nav-message -->
                <li class="nav-notification">
                    <div class="dropdown-custom">
                        <a href="javascript:;" class="nav-item-toggle icon-active">
                            <img class="svg" src="/img/svg/alarm.svg" alt="img">
                        </a>
                        <div class="dropdown-parent-wrapper">
                            <div class="dropdown-wrapper">
                                <h2 class="dropdown-wrapper__title">Thông báo</h2>
                                <ul>
                                    <div class="card card-default card-md mb-4">
                                        <div class="card-body">
                                            <div class="dm-empty text-center">
                                                <div class="dm-empty__image">
                                                    <img src="/img/svg/empty.svg" alt="Empty table">
                                                </div>
                                                <div class="dm-empty__text">
                                                    <p class="">Không có thông báo nào!</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </ul>
                            </div>
                        </div>
                    </div>
                </li>
                <!-- ends: .nav-notification -->
                <!-- ends: .nav-support -->
                <li class="nav-flag-select">
                    <div class="dropdown-custom">
                        <a href="javascript:;" class="nav-item-toggle">
                            <img src="/img/vie.png" alt=""
                                 class="rounded-circle">
                        </a>
                        <div class="dropdown-parent-wrapper">
                            <div class="dropdown-wrapper dropdown-wrapper--small">
                                <a href="#"><img src="/img/eng.png" alt="">Tiếng Anh</a>
                                <a href="#"><img src="/img/vie.png" alt="">Tiếng Việt</a>
                            </div>
                        </div>
                    </div>
                </li>
                <!-- ends: .nav-flag-select -->
                @if (User?.Identity?.IsAuthenticated ?? false)
                {
                    var user = UserManager.GetUserAsync(User).Result;
                    var UserRole = UserManager.GetRolesAsync(user).Result.FirstOrDefault();
                    <li class="nav-author">
                        <div class="dropdown-custom">
                            <a href="#" class="nav-item-toggle">
                                <img src=@user?.ProfileImage alt="" class="rounded-circle">
                                <span class="nav-item__title">
                                    @user?.FirstName @user?.LastName<i class="las la-angle-down nav-item__arrow"></i>
                                </span>
                            </a>
                            <div class="dropdown-parent-wrapper">
                                <div class="dropdown-wrapper">
                                    <div class="nav-author__info">
                                        <div class="author-img">
                                            <img src=@user?.ProfileImage alt="image profile" class="rounded-circle">
                                        </div>
                                        <div>
                                            <h6>@user?.FirstName @user?.LastName</h6>
                                            <span>@UserRole</span>
                                        </div>
                                    </div>
                                    <div class="nav-author__options">
                                        <ul>
                                            @if (UserRole?.ToUpper() == "QUẢN TRỊ VIÊN" &&
                                           !currentPath.StartsWithSegments("/admin"))
                                            {
                                                <li>
                                                    <a href="/admin">
                                                        <i class="uil uil-apps"></i>Trang quản trị
                                                    </a>
                                                </li>
                                            }
                                            <li>
                                                <a href="">
                                                    <i class="uil uil-user"></i>Trang cá nhân
                                                </a>
                                            </li>
                                            <li>
                                                <a href="">
                                                    <i class="uil uil-setting"></i>Cài đặt ứng dụng
                                                </a>
                                            </li>
                                            <li>
                                                <a href="">
                                                    <i class="uil uil-bell"></i>Trợ giúp
                                                </a>
                                            </li>
                                        </ul>
                                        <form asp-action="Logout" asp-controller="Account"
                                              asp-route-returnurl="@ViewData["ReturnUrl"]">
                                            <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                            <button type="submit" class="nav-author__signout border-0 w-100 text-danger">
                                                <i class="uil uil-sign-out-alt"></i>Đăng xuất
                                            </button>
                                        </form>
                                    </div>
                                </div>
                                <!-- ends: .dropdown-wrapper -->
                            </div>
                        </div>
                    </li>
                }
                <!-- ends: .nav-author -->
            </ul>
            <!-- ends: .navbar-right__menu -->
            <div class="navbar-right__mobileAction d-md-none">
                <a href="#" class="btn-search">
                    <img src="/img/svg/search.svg" alt="search" class="svg feather-search">
                    <img src="/img/svg/x.svg" alt="x" class="svg feather-x">
                </a>
                <a href="#" class="btn-author-action">
                    <img class="svg" src="/img/svg/more-vertical.svg" alt="more-vertical">
                </a>
            </div>
        </div>
        <!-- ends: .navbar-right -->
    </nav>
</header>